<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_background"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/warsaw_attraction_image_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/item_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="Warsaw Uprising Museum" />

        <TextView
            android:id="@+id/item_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorAccent"

            android:gravity="center"
            tools:text="Warsaw, Elektoralna 8 St." />

        <TextView
            android:id="@+id/item_opening_hours_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            tools:text="10:00 - 20:00" />

        <TextView
            android:id="@+id/item_phone_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            tools:text="10:00 - 20:00" />

    </LinearLayout>

</LinearLayout>